CREATE TABLE friends (
  id INTEGER,
  name TEXT,
  birthday DATE,
);

INSERT INTO friends (id,
name, birthday)
VALUES (1, 'Ororo Munroe', '30-MAY-1940');

SELECT * FROM friends;

